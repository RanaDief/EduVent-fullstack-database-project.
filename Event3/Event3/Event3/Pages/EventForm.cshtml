@page
@model Event3.Pages.Index1Model
@{
    ViewData["Title"] = "Set Up Your Event";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Event Registration</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="css/bootstrap.min.css">
</head>
<body>
    <header class="bg-danger text-white py-3">
        <nav class="navbar navbar-expand-lg navbar-light">
            <a class="navbar-brand" href="#">Event Registration</a>
        </nav>
    </header>

    <main class="container mt-5">
        <h1 class="text-center">Set Up Your Event</h1>

        @* Display confirmation message if available *@
        @if (!string.IsNullOrEmpty(Model.ConfirmationMessage))
        {
            <div id="confirmationMessage" class="alert alert-success text-center">
                @Model.ConfirmationMessage
            </div>
        }
        <form method="post" class="mt-4">
            <div class="form-group">
                <label for="full-name">Full Name</label>
                <input type="text" class="form-control" id="full-name" name="fullName" required>
            </div>

            <div class="form-group">
                <label for="event-name">Event Name:</label>
                <input type="text" class="form-control" id="event-name" name="eventName" required>
            </div>

            <div class="form-group">
                <label for="event-date">Date:</label>
                <input type="date" class="form-control" id="event-date" name="eventDate" required>
            </div>


            <button type="submit" class="btn btn-primary">Submit Event</button>
        </form>
    </main>

    <footer class="text-center mt-5">
        <p>&copy; 2024 Event Registration. All rights reserved.</p>
    </footer>

    <script>
        // Auto-hide the confirmation message after 5 seconds
        setTimeout(() => {
            const confirmationMessage = document.getElementById('confirmationMessage');
            if (confirmationMessage) {
                confirmationMessage.style.display = 'none';
            }
        }, 5000);
    </script>
</body>
</html>
